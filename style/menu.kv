#:import hex kivy.utils.get_color_from_hex
#:import hex kivy.utils.get_color_from_hex
#:import C kivy.utils.get_color_from_hex
#:import Gradient kivy_gradient.Gradient


<Menu_screen>:
    id: menu
    Menu_app:
        canvas:
            Color:
                rgb: [1,1,1,1]
            Rectangle:
                pos: self.pos
                size: self.size
                texture: Gradient.vertical(get_color_from_hex("#D8D8D8"), get_color_from_hex("#DEDEDE"), get_color_from_hex("#E2E2E2"), get_color_from_hex("#EBEBEB"), get_color_from_hex("#F1F1F1"),)

        GridLayout:
            cols: 1
            rows: 2
            size: root.width - 200, root.height -200
            pos: 100, 100
            padding: [0, 30, 0, 0]

            FloatLayout:
                pos_hint: {'center_y': 0.5, 'center_x': 0.5}
                size_hint: 0.55, 1

                Image:
                    id: imageView
                    source: 'imgs/py-icon-2.png'
                    pos_hint: { 'center_y': 0.9, 'center_x': .520}
                    size_hint: .680, .680
                    allow_stretch: True

                Rounded_button:
                    text: 'START'
                    font_size: 18
                    pos_hint: { 'center_y': 0.460, 'center_x': .520}
                    size_hint: .720, .140
                    on_press: 
                        root.manager.current = 'screen_search'
                        root.manager.transition.direction = "left"
                        
                Rounded_button:
                    text: 'QUIT'
                    font_size: 18
                    pos_hint: {'center_y': 0.180, 'center_x': .520}
                    size_hint: .720, .140
                    on_press: app.stop() 
