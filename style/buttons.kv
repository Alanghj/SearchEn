<Rounded_button@Button>
    background_color: (0, 0, 0, 0)
    background_normal: ''
    color: ('#000000')
    canvas.before:
        Color:
            rgba: (255/255, 255/255, 255/255, 1) if self.state == 'normal' else (240/255, 255/255, 255/255, 1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [16, 16, 16, 16]


