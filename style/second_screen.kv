#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import hex kivy.utils.get_color_from_hex

<Second_window>:
    term_search: term_search
    id: screen_search
    
    Engine_search:
        canvas:
            Color:
                rgb: [1,1,1,1]
            Rectangle:
                pos: self.pos
                size: self.size
                texture: Gradient.vertical(get_color_from_hex("#D8D8D8"), get_color_from_hex("#DEDEDE"), get_color_from_hex("#E2E2E2"), get_color_from_hex("#EBEBEB"), get_color_from_hex("#F1F1F1"),)
        
        GridLayout:
            cols: 1
            rows: 2
            size: root.width - 200, root.height -200
            pos: 100, 100
            padding: [0, 28, 0, 0]

            FloatLayout:
                pos_hint: {'center_y': 0.5, 'center_x': 0.5}
                size_hint: 0.7, .8
                Image:
                    id: imageView
                    source: 'imgs/py-icon-2.png'
                    pos_hint: { 'center_y': 0.9, 'center_x': .520}
                    size_hint: .680, .680
                    allow_stretch: True

                Rounded_text_input:
                    id: term_search
                    text: 'What do you want search for?'
                    text_size: self.width, None
                    pos_hint: {'center_y':0.5, 'center_x': 0.340}
                    size_hint: 0.780, 0.110
                    multiline: False
                    on_touch_down:
                        self.text = ''

                Round_Icon_Button:
                    font_size: 14
                    pos_hint: {'center_y':0.5, 'center_x': .975}
                    size_hint: 0.200, 0.120
                    on_press: 
                        root.search_term()
                        root.show_search()
                    Image:
                        source: 'imgs/loupe-24.png'
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y

                Rounded_button:
                    text: "BACK"
                    font_size: 18
                    pos_hint: {'center_y': 0.240, 'center_x':.520}
                    size_hint: .720, .140
                    on_press: 
                        root.manager.current = 'menu'
                        root.manager.transition.direction = "right"

